<% provide(:title, 'Sign up') %>
<h1>Hi <%= session[:user_name] %></h1>




<div class="center row">
  <div class="col-md-10 col-md-offset-1">

    <div class="row" style="text-align: right; margin: 1em;">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Add chat room
      </button>
    </div>

    <ul class="rooms">
      <% @rooms.each do |room| %>
        <li class="room_box">
          <%= link_to room.name, room, method: :get %>
        </li>
      <% end %>
    </ul>
  </div>
</div>




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a new chat room</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="center modal-body">
        <%= form_for Room.new do |f| %>
          <%= f.text_field :name, placeholder: "Room name"  %>
          <%= f.submit "Create room", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>